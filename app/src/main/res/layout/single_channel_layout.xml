<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.waveform.utils.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view" />


    <com.yunxi.voiceview.TimeView
        android:id="@+id/time_rule_view"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        />
    <com.yunxi.voiceview.AudioSurfaceView
        app:layout_constraintTop_toBottomOf="@+id/time_rule_view"
        android:layout_width="520dp"
        android:layout_height="500dp"
        android:id="@+id/bsv_singleChannel"
        />

    <com.yunxi.voiceview.AudioDbText
        app:layout_constraintTop_toBottomOf="@+id/time_rule_view"
        app:layout_constraintLeft_toRightOf="@+id/bsv_singleChannel"
        android:layout_width="32dp"
        android:layout_height="500dp"
        android:id="@+id/voice_db"
        />




    <com.yunxi.voiceview.VoiceDbView
        android:id="@+id/voiceDb_view"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/voice_db"
        tools:ignore="MissingConstraints" />

    <com.yunxi.voiceview.VoiceDbText
        android:id="@+id/voiceDb_text"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/voiceDb_view"
        />



    <ImageView
        android:clickable="true"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voiceDb_text"
        android:id="@+id/iv_singleChannel"
        android:src="@drawable/start_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:visibility="gone"
        android:text="重新录制"
        android:clickable="true"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_singleChannel"
        android:id="@+id/btn_singleChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>