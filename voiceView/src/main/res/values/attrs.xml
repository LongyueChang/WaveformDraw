<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NewVoiceView">
        <attr name="bgColor" format="color|reference"/>
        <attr name="startColor" format="color|reference"/>
        <attr name="centerColor" format="color|reference"/>
        <attr name="endColor" format="color|reference"/>
    </declare-styleable>



    <!--背景色-->
    <attr name="yunxi_bgColor" format="reference|color" />
    <!--刻度颜色-->
    <attr name="yunxi_gradationColor" format="reference|color" />

    <!--中间指针线颜色-->
    <attr name="yunxi_indicatorLineColor" format="reference|color" />
    <!--中间指针线宽度-->
    <attr name="yunxi_indicatorLineWidth" format="reference|dimension" />

    <!--时间尺控件-->
    <declare-styleable name="TimeRuleView">
        <attr name="yunxi_bgColor" />
        <!--刻度颜色-->
        <attr name="yunxi_gradationColor" />
        <!--时间块的高度-->
        <attr name="trv_partHeight" format="dimension|reference" />
        <!--时间块的颜色-->
        <attr name="trv_partColor" format="color|reference" />
        <!--刻度宽度-->
        <attr name="trv_gradationWidth" format="dimension|reference" />
        <!--秒刻度的长度-->
        <attr name="trv_secondLen" format="dimension|reference" />
        <!--分刻度的长度-->
        <attr name="trv_minuteLen" format="dimension|reference" />
        <!--时刻度的长度-->
        <attr name="trv_hourLen" format="dimension|reference" />
        <!--刻度数值颜色-->
        <attr name="trv_gradationTextColor" format="color|reference" />
        <!--刻度数值大小-->
        <attr name="trv_gradationTextSize" format="dimension|reference" />
        <!--刻度数值与时刻度的距离-->
        <attr name="trv_gradationTextGap" format="dimension|reference" />
        <!--当前时间，单位：s-->
        <attr name="trv_currentTime" format="integer|reference" />
        <!--中间指针线颜色-->
        <attr name="yunxi_indicatorLineColor" />
        <!--中间指针线宽度-->
        <attr name="yunxi_indicatorLineWidth" />
        <!--中间指针上三角形的边长-->
        <attr name="trv_indicatorTriangleSideLen" format="dimension|reference" />

    </declare-styleable>




    <declare-styleable name="waveView">
        <attr name="gsyWaveColor" format="color" />
        <attr name="gsyTexture_bg_waveColor" format="color" />
        <attr name="gsyWaveOffset" format="dimension" />
        <attr name="gsyWaveCount" format="dimension" />
    </declare-styleable>
</resources>